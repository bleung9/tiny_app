<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <title>User registration</title>

    <style>
      body {
        background: url(https://i.imgur.com/sohWhy9.png);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
      }
    </style>

  </head>

  <body style="font-size:20px; padding:50px;">

    <% include ./partials/_header %>

    <h3>LOGIN TO TinyURL</h3>
    <form class="block" action="/login" method="POST">
      <div class="form-group mb-2">
        <label for="email">Enter your email:</label>
        <input class="form-control" type="email" name="email" placeholder="Enter your email" style="width: 300px; margin: 1em">
        <label for="password">Enter password:</label>
        <input class="form-control" type="password" name="password" placeholder="Enter your password" style="width: 300px; margin: 1em">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>

  </body>
</html>